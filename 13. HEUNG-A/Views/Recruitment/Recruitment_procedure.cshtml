@{
    ViewBag.Title = "Recruitment";
    ViewBag.Sub = "Recruitment_procedure";

    Layout = "~/Views/Shared/_subLayout.cshtml";

    string setLang = "";
    if (HttpContext.Current.Session["Language"] == null)
    {
        setLang = "KO";
    }
    else
    {
        setLang = HttpContext.Current.Session["Language"].ToString();
    }

    if (string.IsNullOrEmpty(setLang))
    {
        setLang = "KO";
    }
}

@section Container {

    @if (setLang.Equals("EN"))  //언어 설정이 영어 일 경우
    {
        <!-- container -->
        <div class="container">
            <div class="contents">
                <h3 class="subtitle"><span>준비 중 입니다</span></h3>
            </div>
        </div>
        <!-- //container -->
    }
    else
    {
        <!-- container -->
        <div class="container">
            <div class="contents">
                <h3 class="subtitle"><span>채용절차</span></h3>
                <h3 class="title01">(주)흥아로지스틱스는 도전과 패기가 넘치는 글로벌 물류전문가를 기다립니다.</h3>

                <div class="procedure_Wrap">
                    <div class="procedure_Area">
                        <div class="procedure_Box_Area">
                            <h3>모집시기</h3>
                            <ul class="procedure_Content">
                                <li>수시모집</li>
                            </ul>
                        </div>
                        <div class="procedure_Box_Area">
                            <h3>모집부분</h3>
                            <ul class="procedure_Content">
