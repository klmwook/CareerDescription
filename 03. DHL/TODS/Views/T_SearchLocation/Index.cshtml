                    <tr>
                        <td>1</td>
                        <td>AAAAAAAAAAAAAAAAAA</td>
                        <td>BBBBBBBB</td>
                        <td>1SLS</td>
                        <td>A04-D01-H03</td>
                    </tr>
                        *@
                    </tbody>
                </table>
            </div>

        </div>
    </section>
    @Scripts.Render("~/Scripts/js/TODS/Search_Location.js")
}