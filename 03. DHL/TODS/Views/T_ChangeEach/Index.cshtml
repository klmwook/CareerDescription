
@{
    ViewBag.Title = "T_ChangeEach";

    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section Container {
    <section class="container" id="container">
        <div class="contents">
            <!-- title -->
            <div class="sub_title">
                <h2>LOCATION CHANGE (EACH)</h2>
            </div>
            <!-- //title -->
            <!-- search_zone -->
            <div class="search_zone layout9 Now_Box_Border">
                <h2 class="sub_title03">현재</h2>
                <div class="inner">
                    <div class="col">
                        <select class="sel st1" name="" id="Select_Now_Store">
                            <option value="">STORE</option>
                        </select>
                    </div>
                    <div class="col">
                        <div class="int_box">
                            <input type="text" placeholder="LOCATION" id="Input_Now_Location" maxlength="15">
                            <button type="button" class="btns icon delete" style="display: none;"><span class="blind">삭제</span></button>
                        </div>
                    </div>
                    <div class="col">
                        <div class="int_box">
                            <input type="text" placeholder="BARCODE" id="Input_Now_Barcode" maxlength="12">
                            <button type="button" class="btns icon delete" style="display: none;"><span class="blind">삭제</span></button>
                        </div>
                    </div>
                </div>
                <div class="inner" style="margin-top:10px;">
                    <div class="col"></div>
                    <div class="col">
                        <div class="int_box none">
                            <button class="Search_button" id="btn_Location">LOCATION 검색</button>
                        </div>
                    </div>
                    <div class="col">
                        <div class="int_box none">
                            <button class="Search_button" id="btn_Barcode">BARCODE 검색</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- search_zone -->

            <div class="tbl_body_scroll300" id="LC_Each_Scroll">
                <table class="list_type2">
                    <colgroup class="pc">
                        <col class="w10per">
                        <col class="w45per">
                        <col class="w45per">
                    </colgroup>
                    <colgroup class="mo">
                        <col class="w1">
                        <col class="w130">
                        <col class="w100">
                    </colgroup>
                    <thead class="head">
                        <tr class="row">
                            <th>NO</th>
                            <th>BARCODE</th>
                            <th>ARTICLE</th>
                        </tr>
                    </thead>
                    <tbody id="LC_Each_Result_Area">
                        @*<tr>
                                <td>1</td>
                                <td>AAAAAAAAAAAAAAAAAA</td>
                                <td>ABCDEFGH</td>
                            </tr>
                        *@
                    </tbody>
                </table>
            </div>

            <!-- search_zone -->
            <div class="search_zone layout10 Change_Box_Border ">
                <h2 class="sub_title03">변경 후</h2>
                <div class="inner">

                    @{
                        @*관리자 권한일 경우에만 Store 변경 가능하게 수정*@
                        if (@Session["AUTH_TYPE"] != null)
                        {
                            if (Convert.ToInt32(@Session["AUTH_TYPE"].ToString()) < 3)
                            {
                                <div class="col">
                                    <select class="sel st1" name="" id="Select_Change_Store">
                                        <option value="">STORE</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <input type="button" class="btns type12" id="btn_Each_StoreSave" value="Store 변경" />
                                </div>
                            }
                        }
                    }

                    <div class="col">
                        <div class="int_box">
                            <div class="int_box">
                                <input type="text" placeholder="LOCATION" id="Input_Change_Location" maxlength="15">
                                <button type="button" class="btns icon delete" style="display: none;"><span class="blind">삭제</span></button>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <input type="button" class="btns type12" id="btn_Each_LocationSave" value="상품위치 변경" />
                    </div>
                </div>
            </div>
            <!-- search_zone -->

        </div>
    </section>

    <div class="layer_zone alert_layer" id="StoreSave_Confirm" style="z-index:10001">
        <div class="layer_wrap">
            <div class="layer_inwrap">
                <article class="layer_cont">
                    <!-- alert_cont -->
                    <div class="alert_cont">
                        <div class="inner2">
                            Store 변경 하시겠습니까?
                        </div>
                    </div>
                    <!-- //alert_cont -->
                    <!-- btn_w -->
                    <div class="btn_center">
                        <button type="button" class="btns type9 yes" id="StoreSave_Confirm_Yes">예</button>
                        <button type="button" class="btns type9" onclick="layerClose('#StoreSave_Confirm');">아니오</button>
                    </div>
                    <!-- //btn_w -->
                </article>
            </div>
        </div>
    </div>

    <div class="layer_zone alert_layer" id="ItemSave_Confirm" style="z-index:10001">
        <div class="layer_wrap">
            <div class="layer_inwrap">
                <article class="layer_cont">
                    <!-- alert_cont -->
                    <div class="alert_cont">
                        <div class="inner2">
                            상품위치 변경 하시겠습니까?
                        </div>
                    </div>
                    <!-- //alert_cont -->
                    <!-- btn_w -->
                    <div class="btn_center">
                        <button type="button" class="btns type9 yes" id="ItemSave_Confirm_Yes">예</button>
                        <button type="button" class="btns type9" onclick="layerClose('#ItemSave_Confirm');">아니오</button>
                    </div>
                    <!-- //btn_w -->
                </article>
            </div>
        </div>
    </div>
    @Scripts.Render("~/Scripts/js/TODS/Change_Each.js")
}