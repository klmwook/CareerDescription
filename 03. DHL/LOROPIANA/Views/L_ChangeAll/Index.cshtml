
@{
    ViewBag.Title = "L_ChangeAll";

    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section Container {
    <section class="container" id="container">
        <div class="contents">
            <!-- title -->
            <div class="sub_title">
                <h2>LOCATION CHANGE (ALL)</h2>
            </div>
            <!-- //title -->
            <!-- search_zone -->
            <div class="search_zone layout9 Now_Box_Border">
                <h2 class="sub_title03">현재</h2>
                <div class="inner">
                    <div class="col">
                        <select class="sel st1" name="" id="Select_Now_Store">
                            <option value="">STORE</option>
                        </select>
                    </div>
                    <div class="col">
                        <div class="int_box">
                            <input type="text" placeholder="LOCATION" id="Input_Now_Location" maxlength="20" inputmode="none">
                            <button type="button" class="btns icon delete" style="display: none;"><span class="blind">삭제</span></button>
                        </div>
                    </div>
                    <div class="col">
                        <!-- 해당 로케이션의 ITEM 합 -->
                        <label>TOTAL : <span id="Span_Total">0</span></label><br />
                    </div>
                </div>
            </div>
            <!-- search_zone -->
            <!-- Allow -->
            <div class="Arrow_Area">
                <img src="~/Images/icn_arrow03.png" alt="화살표" />
            </div>
            <!-- Allow -->
            <!-- search_zone -->
            <div class="search_zone layout10 Change_Box_Border ">
                <h2 class="sub_title03">변경 후</h2>
                <div class="inner">
                    <div class="col">
                        <select class="sel st1" name="" id="Select_Change_Store">
                            <option value="">STORE</option>
                        </select>
                    </div>
                    <div class="col">
                        <input type="button" class="btns type12" id="btn_ALL_StoreSave" value="Store 변경" />
                    </div>
                    <div class="col">
                        <div class="int_box">
                            <input type="text" placeholder="LOCATION" id="Input_Change_Location" maxlength="20" inputmode="none">
                            <button type="button" class="btns icon delete" style="display: none;"><span class="blind">삭제</span></button>
                        </div>
                    </div>
                    <div class="col">
                        <input type="button" class="btns type12" id="btn_ALL_LocationSave" value="상품위치 변경" />
                    </div>
                </div>
            </div>
            <!-- search_zone -->
        </div>
    </section>

    <div class="layer_zone alert_layer" id="StoreSave_Confirm" style="z-index:10001">
        <div class="layer_wrap">
            <div class="layer_inwrap">
                <article class="layer_cont">
                    <!-- alert_cont -->
                    <div class="alert_cont">
                        <div class="inner2">
                            Store 변경 하시겠습니까?
                        </div>
                    </div>
                    <!-- //alert_cont -->
                    <!-- btn_w -->
                    <div class="btn_center">
                        <button type="button" class="btns type9 yes" id="StoreSave_Confirm_Yes">예</button>
                        <button type="button" class="btns type9" onclick="layerClose('#StoreSave_Confirm');">아니오</button>
                    </div>
                    <!-- //btn_w -->
                </article>
            </div>
        </div>
    </div>

    <div class="layer_zone alert_layer" id="ItemSave_Confirm" style="z-index:10001">
        <div class="layer_wrap">
            <div class="layer_inwrap">
                <article class="layer_cont">
                    <!-- alert_cont -->
                    <div class="alert_cont">
                        <div class="inner2">
                            상품위치 변경 하시겠습니까?
                        </div>
                    </div>
                    <!-- //alert_cont -->
                    <!-- btn_w -->
                    <div class="btn_center">
                        <button type="button" class="btns type9 yes" id="ItemSave_Confirm_Yes">예</button>
                        <button type="button" class="btns type9" onclick="layerClose('#ItemSave_Confirm');">아니오</button>
                    </div>
                    <!-- //btn_w -->
                </article>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Scripts/js/Change_All.js")
}